<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Page">

    <ImageView
        android:id="@+id/profile_icn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_92"
        android:background="@drawable/profile_user_icon"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/profile_icn"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_username_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/username_tv"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/profile_icn"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_email_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profile_icn"/>

    <TextView
        android:id="@+id/phone_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@id/email_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_phone_number_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_email_iv"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/DoB_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:layout_below="@id/phone_number_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_DoB_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_phone_number_iv"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@id/DoB_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_address_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_DoB_iv"
        android:layout_marginTop="25dp"/>

    <TextView
        android:inputType="textPassword"
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/address_tv"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/edit_password_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_address_iv"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_tv"
        android:layout_marginTop="20dp"
        android:text="Logout"
        android:textStyle="bold"
        android:backgroundTint="#FF0000"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="@drawable/edit_nav_color"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"/>

</RelativeLayout>