<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:padding="50dp"
    android:elevation="8dp"
    android:layout_margin="20dp"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/centang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:backgroundTint="#FF2A9DF4"/>

        <TextView
            android:id="@+id/vir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/centang"
            android:textSize="25sp"
            android:text="Virtual Account"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:id="@+id/virtual_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vir"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="70777015088"/>

        <ImageButton
            android:id="@+id/copy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vir"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_baseline_content_copy_24"
            android:layout_toRightOf="@id/virtual_number"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:textColor="#000000"
            android:layout_below="@+id/virtual_number"
            android:background="@drawable/edit_text_border"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>